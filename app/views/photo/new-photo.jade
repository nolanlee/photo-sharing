extends ../layout

block css
  link(rel='stylesheet', href='/css/new-photo.css')
  link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Parisienne' )

block content
  div.header
    h1.title iPhotoSharing
  form#photoForm
    div.photo-fieldset
      input#file.upload-input(type='file', name='file', accept='image/*')
      a#choose.upload-button.upload-button-animation(href='javascript:void(0);') Choose
    div.photo-form-popup
      div.photo-form-details
        img#preview.photo-form-popup-control
        textarea#description.photo-form-control.photo-form-popup-control(name='description', placeholder='Description')
        input#cloudToken(name='token', type='hidden', value= token)
        input#cloudKey(name='key', type='hidden', value= key)
        button#cancel.photo-button.photo-form-button.photo-form-popup-control(type='button') Cancel
        button#submit.photo-button.photo-form-button.primary-button.photo-form-popup-control(type='submit' name='submit') Submit
  div#photoResult
    img#result
    label.photo-form-label Copy and share everywhere:
    span#sharingLink.photo-info
    label.photo-form-label Passcode 
    p.photo-form-tip (if you think you will delete the image one day, please remember it)
    span#passcode.photo-info
    button#back.photo-button(type='button') Back
  div#toast Image size must be less than 8MB
  div#loadingContainer
    div.spinner
      div.spinner-container.container1
        div.circle1
        div.circle2
        div.circle3
        div.circle4
      div.spinner-container.container2
        div.circle1
        div.circle2
        div.circle3
        div.circle4
      div.spinner-container.container3
        div.circle1
        div.circle2
        div.circle3
        div.circle4
    
block js
  script(src='/js/exif.js')
  script(src='/js/new-photo.js')
